source 'http://rubygems.org'

gem 'rails', '3.1.0'

group :development, :test do
  gem 'sqlite3'
  gem 'debugger'
end

group :production do
  gem 'pg'
  gem 'rails_12factor'
end

group :assets do
  gem 'therubyracer'              
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

# Use jQuery for javascript
gem 'jquery-rails'

# Use HAML for HTML templating
gem 'haml'
